{% extends 'base.html.twig' %}

{%  block body %}
<div class="body div list_user">
    <div>
    <h1 class="titre_sortie">Liste des utilisateurs</h1>
    <br>
    <table class="index_table">
        <thead>
            <tr>
                <td class="index_td_head index_td_head1">Nom</td>
                <td class="index_td_head index_td_head2">Prénom</td>
                <td class="index_td_head index_td_head3">Email</td>
                <td class="index_td_head index_td_head4">Pseudo</td>
                <td class="index_td_head index_td_head5">Téléphone</td>
                <td class="index_td_head index_td_head6">Actions</td>
            </tr>

            {% for user in users %}
                <tr class="index_tr">
                    <td class="gras index_td">{{ user.nom }}</td>
                    <td class="index_td">{{ user.prenom }}</td>
                    <td class="index_td">{{ user.mail }}</td>
                    <td class="index_td">{{ user.pseudo }}</td>
                    <td class="index_td">{{ user.telephone }}</td>
                    <td class="index_td">
                        {% if user.actif == 1 %}

                            <a class="lien_tab" href="{{ path('participant_inactif', {'id' : user.id }) }}">Rendre inactif</a>

                        {% else %}

                            <a class="lien_tab" href="{{ path('participant_actif', {'id' : user.id }) }}">Rendre actif</a>

                        {% endif %}

                         - <a class="lien_tab" href="{{ path('participant_supprimer', {'id' : user.id }) }}"> Supprimer </a>

                    </td>
                </tr>
            {% endfor %}
        </thead>
    </table>
    </div>
</div>

{%  endblock %}