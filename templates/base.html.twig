<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <title>{% block title %}OnVaSortir!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
        <script src="https://kit.fontawesome.com/056567f070.js" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% if( app.request.cookies.get('theme')=='1' or app.request.cookies.get('theme')==null) %}
            <link rel="icon" href="{{ asset('img/licorne.png') }}">
        {% elseif( app.request.cookies.get('theme')=='2') %}
            <link rel="icon" href="{{ asset('img/chewy.png') }}">
        {% endif %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% if( app.request.cookies.get('theme')=='1' or app.request.cookies.get('theme')==null) %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% elseif( app.request.cookies.get('theme')=='2') %}
            <link rel="stylesheet" href="{{ asset('css/sw.css') }}">
        {% endif %}

    </head>
    <body>

    {% for label, messages in app.flashes%}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor%}
    {% endfor%}


    <div class="test">
        <a class="logo" href="{{ path('app_login') }}">
            <img src="{{ asset('img/logo.png') }}" alt="Logo OnVaSortir!" id="img">
        </a>
        <header>{% include ('header.html.twig') %}</header>
        {% block body %}{% endblock %}

    </div>

    </body>

    <script src="{{ asset('js/groupe.js') }}"></script>
</html>
