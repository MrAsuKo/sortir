{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}

{% block body %}

<div class="body connecter">

<form method="post">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="titre_sortie">Se connecter</h1>
    <br>
    <div class="div input-group input-group-sm mb-3"><div class="input-group-text">
    <label for="inputMail">Mail : </label>
        </div>
    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="form-control" autocomplete="username" required autofocus>
    </div>
    <div class="div input-group input-group-sm mb-3"><div class="input-group-text">
        <label for="inputPassword">Password : </label>
        </div>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label>
                <input class="form-check-input filter_switch" type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
        </div>

    <a class="lien_tab" href="{{ path('app_forgot_password_request') }}">J'ai oubli√© mon mot de passe</a>
    <br><br>

    <button class="btn btn-secondary bouton_connecter" type="submit">
        Connexion
    </button>
</form>
</div>
{% endblock %}
