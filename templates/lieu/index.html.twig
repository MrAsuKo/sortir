{% extends 'base.html.twig' %}

{% block title %}Hello LieuController!{% endblock %}

{% block body %}
    <div class="lieu_div">
        <table class="lieu-table">
            <thead>
            <tr class="lieu_tr">
                <td class="lieu_td_head lieu_td_head1">Nom</td>
                <td class="lieu_td_head lieu_td_head1">Rue</td>
                <td class="lieu_td_head lieu_td_head1">Latitude</td>
                <td class="lieu_td_head lieu_td_head1">Longitude</td>
                <td class="lieu_td_head lieu_td_head1">Ville</td>
                <td class="lieu_td_head lieus_td_head2">Actions</td>
            </tr>
            </thead>

            <tbody>
            {% for lieu in lieux %}
                <tr class="lieu_tr">
                    <td class="lieu_td">{{ lieu.nom }}</td>
                    <td class="lieu_td">{{ lieu.rue }}</td>
                    <td class="lieu_td">{{ lieu.latitude }}</td>
                    <td class="lieu_td">{{ lieu.longitude }}</td>
                    <td class="lieu_td">{{ lieu.ville.nom }}</td>
                    <td class="lieu_td"><a href=""> Modifier</a> - <a href="#"> Supprimer</a>    </td>
                </tr>
            {% endfor %}
            </tbody>

            <tfoot>
            <tr class="lieu_tr">
                {{ form_start(lieuForm) }}
                <td class="lieu_td">{{ form_widget(lieuForm.nom) }}
                <td class="lieu_td">{{ form_widget(lieuForm.rue) }}
                <td class="lieu_td">{{ form_widget(lieuForm.latitude) }}
                <td class="lieu_td">{{ form_widget(lieuForm.longitude) }}</td>
                <td class="lieu_td">{{ form_widget(lieuForm.ville) }}</td>
                <td class="lieu_td">{{ form_widget(lieuForm.valider) }}</td>
                {{ form_end(lieuForm) }}
            </tr>
            </tfoot>

        </table>
    </div>
    <div class="profil_div">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
